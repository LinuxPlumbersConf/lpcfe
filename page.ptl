	color: white;
	padding: 10px;
	display: inline-block;
	vertical-align: middle;
	line-height: normal;
	font-size: 12pt;
	font-weight: 800;
    }
    div.centered-column {
	margin: 2em;
	width: 100%;
    }
    /* Timetable trickery */
    table.tt  {
        display: table-row;
	width: 95%;
    }
    table.tt thead {
        display: none;
    }
    span.tt {
	display: inline;
    }
    table.tt tbody, th, td, tr {
        display: block;
    }

    table.tt tr.tthdr {
	display: none;
    }

    table.tt td {
        /* Behave  like a "row" */
        border: none;
        position: relative;
        /* padding-left: 50%;*/
    }

    table.tt td:before {
        /* Now like a table header */
        position: absolute;
        /* Top/left values mimic padding */
        top: 6px;
        left: 6px;
        width: 45%;
        padding-right: 10px;
        white-space: nowrap;
    }
}
 
