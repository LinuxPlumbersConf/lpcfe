def header [html] (title):
    '''<html>
       <head>
         <title>Linux Plumbers Conference 2020</title>
         <link rel="stylesheet" type="text/css" href="/stylesheet">
       </head>
       <body>
         <div class="titlebox">
            <h1 class="title">Linux Plumbers Conference 2020</h1>
         </div>
         <br>
         <h2>%s</h2>
       ''' % (title)

def trailer [html] ():
    '</body></html>'
       
def CSS [html] ():
    return Stylesheet

#
# Menu handling.
#
menu_items = [
    ("https://linuxplumbersconf.org/", 'Main LPC page'),
    ("https://www.linuxplumbersconf.org/blog/2020/", 'LPC blog'),
    ("https://www.linuxplumbersconf.org/event/7/page/48-anti-harassment-policy",
     'Anti-harrassment policy'),
    ("https://www.linuxplumbersconf.org/event/7/page/50-contact", 'Contact'),
    ("/logout", 'Log out') ]

priv_menu_items = [
    ('/status', 'Server/room status') ]

def render_menu_item [html] (item):
    '<li> <a href="%s">%s</a>\n' % item

def menu [html] (privileged):
    '''<input type="checkbox" checked class="LeftMenuCtrl" id="LeftMenuCtrl">
       <label class="LeftMenuCtrl" for="LeftMenuCtrl"></label>
       <div class="conf_leftMenu">
       <ul id="outer">
       '''
    if privileged:
        for item in priv_menu_items:
            render_menu_item(item)
    for item in menu_items:
        render_menu_item(item)
    '</ul></div>\n'
